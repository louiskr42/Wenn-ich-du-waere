    <style name="YButtonStyle">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/gameGreen</item>
    </style>

    <style name="NButtonStyle">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/red</item>
    </style>

</resources>
